<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="99dp"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/heroimege_logo_large"
        />

    <wallet.raccoon.raccoonwallet.view.WalletBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </FrameLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="32dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >

    <androidx.cardview.widget.CardView
        android:id="@+id/newbieButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="56dp"
            android:layout_height="90dp"
            android:src="@mipmap/image_lesson_card1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_newbie_title"
              android:textColor="@color/nemGreen"
              android:textSize="16sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_newbie_subtitle"
              android:textColor="@color/textGray"
              android:textSize="12sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_newbie_description"
              android:textColor="@color/textBlack"
              android:textSize="14sp"
              />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="32dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="56dp"
            android:layout_height="90dp"
            android:src="@mipmap/image_lesson_card2"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_login_title"
              android:textColor="@color/nemGreen"
              android:textSize="16sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_login_subtitle"
              android:textColor="@color/textGray"
              android:textSize="12sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_login_description"
              android:textColor="@color/textBlack"
              android:textSize="14sp"
              />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/raccoonButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="32dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="56dp"
            android:layout_height="90dp"
            android:src="@mipmap/image_lesson_card3"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_raccoon_title"
              android:textColor="@color/nemGreen"
              android:textSize="16sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_raccoon_subtitle"
              android:textColor="@color/textGray"
              android:textSize="12sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/select_tutorial_level_fragment_raccoon_description"
              android:textColor="@color/textBlack"
              android:textSize="14sp"
              />
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </LinearLayout>
</LinearLayout>
